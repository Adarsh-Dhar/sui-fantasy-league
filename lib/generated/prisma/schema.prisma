generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id      String @id @default(cuid())
  address String @unique
  wins    Int    @default(0)
  losses  Int    @default(0)
  teams   Team[]
}

model Team {
  id       String   @id @default(cuid())
  name     String
  tokens   String[]
  player   Player   @relation(fields: [playerId], references: [id])
  playerId String
}
